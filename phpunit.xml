<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        colors="true"
        bootstrap="autoload.php">
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite name="PhpDB tests">
            <directory>./test/</directory>
        </testsuite>
    </testsuites>
</phpunit>
